#!/usr/bin/env bash
# Generated by confd

source $DGIS_OPENSTACK_SCRIPTS_PATH/common.sh
source /openrc.sh

wait_for_endpoint $OS_SERVICE_ENDPOINT 1 10

python $DGIS_OPENSTACK_SCRIPTS_PATH/create_service.py \
    --type network \
    --name neutron \
    --description 'OpenStack Networking'

keystone user-create \
    --name neutron \
    --tenant service \
    --pass {{ getv "/services/neutron/config/service-password" }}

keystone user-role-add \
    --user neutron \
    --role admin \
    --tenant service

# Needed for tempest
keystone user-role-add \
    --user neutron \
    --role admin \
    --tenant admin

python $DGIS_OPENSTACK_SCRIPTS_PATH/create_endpoint.py \
    --service neutron \
    --public-url http://{{ getv "/services/balancer/host" }}:9696 \
    --admin-url http://{{ getv "/services/balancer/host" }}:9696 \
    --internal-url http://{{ getv "/services/balancer/host" }}:9696
