# Generated by confd

[DEFAULT]
debug = {{ getv "/services/heat/config/debug" }}
verbose = {{ getv "/services/heat/config/verbose" }}

idle_timeout = 200
admin_token = {{ getv "/services/keystone/config/admin-token" }}

use_syslog = False
log_file = /dev/stdout

heat_metadata_server_url = "http://127.0.0.1:8000"
heat_waitcondition_server_url = "http://127.0.0.1:8000/v1/waitcondition"

stack_domain_admin = {{ getv "/services/heat/config/stack-domain-admin" }}
stack_domain_admin_password = {{ getv "/services/heat/config/stack-domain-admin-password" }}
stack_user_domain_name = {{ getv "/services/heat/config/stack-user-domain-name" }}

rpc_backend = rabbit

[oslo_messaging_rabbit]
{{ $rabbit_hosts := getvs "/services/rabbitmq/hosts/*" }}
rabbit_hosts = {{ join $rabbit_hosts "," }}
rabbit_userid = {{ getv "/services/rabbitmq/config/userid" }}
rabbit_password = {{ getv "/services/rabbitmq/config/password" }}

[database]
connection = {{ getv "/services/heat/config/db-connection" }}

idle_timeout = 200
min_pool_size = 5
max_pool_size = 10
pool_timeout = 200

[keystone_authtoken]
auth_uri = http://{{ getv "/services/balancer/host" }}:5000/v2.0
identity_uri = http://{{ getv "/services/balancer/host" }}:35357
admin_user = {{ getv "/services/heat/config/keystone-user" }}
admin_tenant_name = {{ getv "/services/heat/config/keystone-tenant" }}
admin_password = {{ getv "/services/heat/config/keystone-password" }}
