#!/usr/bin/env bash
# Generated by confd

source $DGIS_OPENSTACK_SCRIPTS_PATH/common.sh
source /openrc.sh

wait_for_endpoint $OS_SERVICE_ENDPOINT 1 10

python $DGIS_OPENSTACK_SCRIPTS_PATH/create_service.py \
    --name designate \
    --type dns \
    --description "Designate Service"

keystone user-create \
    --name designate \
    --tenant service \
    --pass {{ getv "/services/designate/config/service-password" }}

keystone user-role-add \
    --tenant service \
    --user designate \
    --role admin

python $DGIS_OPENSTACK_SCRIPTS_PATH/create_endpoint.py \
    --service-name designate \
    --public-url "http://{{ getv "/services/balancer/host" }}:9001/v1" \
    --admin-url "http://{{ getv "/services/balancer/host" }}:9001/v1" \
    --internal-url http://{{ getv "/services/balancer/host" }}:9001/v1
