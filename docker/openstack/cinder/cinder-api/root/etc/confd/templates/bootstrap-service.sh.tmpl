#!/usr/bin/env bash
# Generated by confd

source /openrc.sh
source $DGIS_OPENSTACK_SCRIPTS_PATH/common.sh

wait_for_endpoint $OS_SERVICE_ENDPOINT 1 10

python $DGIS_OPENSTACK_SCRIPTS_PATH/create_service.py \
    --type volume \
    --name cinder \
    --description 'Cinder Volume Service'

python $DGIS_OPENSTACK_SCRIPTS_PATH/create_service.py \
    --type volumev2 \
    --name cinderv2 \
    --description 'Cinder Volume Service'

keystone user-create \
    --name cinder \
    --tenant service \
    --pass {{ getv "/services/cinder/config/service-password" }}

keystone user-role-add \
    --user cinder \
    --role admin \
    --tenant service

python $DGIS_OPENSTACK_SCRIPTS_PATH/create_endpoint.py \
    --service cinder \
    --public-url "http://{{ getv "/services/balancer/host" }}:8776/v1/%(tenant_id)s" \
    --admin-url "http://{{ getv "/services/balancer/host" }}:8776/v1/%(tenant_id)s" \
    --internal-url "http://{{ getv "/services/balancer/host" }}:8776/v1/%(tenant_id)s"

python $DGIS_OPENSTACK_SCRIPTS_PATH/create_endpoint.py \
    --service cinderv2 \
    --public-url "http://{{ getv "/services/balancer/host" }}:8776/v2/%(tenant_id)s" \
    --admin-url "http://{{ getv "/services/balancer/host" }}:8776/v2/%(tenant_id)s" \
    --internal-url "http://{{ getv "/services/balancer/host" }}:8776/v2/%(tenant_id)s"
